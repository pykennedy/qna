<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryAccent</item>
    </style>

    <style name="top_actionbar_text">
        <item name="android:textColor">@color/white_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="bottom_actionbar_text">
        <item name="android:textColor">@color/white_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="list_item_tint">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/rounded_list_item</item>
        <item name="blurOverlayColor">#11ffffff</item>
    </style>

    <style name="list_item_qa">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="list_item_username">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/colorPrimaryAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="list_item_date">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/white_primary_32</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
